{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
        "Env": {
            "Type": "String",
            "Default": "dev"
        },
        "InstanceType": {
            "Type": "String",
            "Default": "t2.large",
            "ConstraintDescription": "must be a valid EC2 instance type."
        },
        "JenkinsPassword": {
            "Type": "String",
            "NoEcho": "true"
        },
        "JenkinsUser": {
            "Type": "String",
            "NoEcho": "true"
        },

        "source_ip": {
            "Type": "String",
            "NoEcho": "true"
        },
        "source_port": {
            "Type": "String",
            "NoEcho": "true"
        },
        "source_type": {
            "Type": "String",
            "NoEcho": "true"
        },
        "destination_ip": {
            "Type": "String",
            "NoEcho": "true"
        },
        "destination_port": {
            "Type": "String",
            "NoEcho": "true"
        },
        "destination_type": {
            "Type": "String",
            "NoEcho": "true"
        }

    },
    "Mappings": {
        "AWSInstanceType2Arch": {
            "t2.large": {
                "Arch": "HVM64"
            }
        },
        "AWSRegionArch2AMI": {
            "us-east-1": {
                "HVM64": "ami-0cfc05f17eac80275",
                "HVMG2": "ami-03fe4d5b1d229063a"
            }
        }
    },
    "Resources": {
        "ShakeServer": {
            "Type": "AWS::EC2::Instance",
            "CreationPolicy": {
                "ResourceSignal": {
                    "Count": "1",
                    "Timeout": "PT5M"
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Init": {
                    "Deploy": {
                        "commands": {
                            "docker-login": {
                                "command": {
                                    "Fn::Join": [
                                        " ",
                                        [
                                            "docker login",
                                            "-u",
                                            {
                                                "Ref": "JenkinsUser"
                                            },
                                            "-p",
                                            {
                                                "Ref": "JenkinsPassword"
                                            },
                                            "docker-apps-dev.artifactory.tsp.cld.touchtunes.com",
                                            "&&",
                                            "docker pull",
                                            "docker-apps-dev.artifactory.tsp.cld.touchtunes.com/redis-shake-dev"
                                        ]
                                    ]
                                }
                            },
                            "docker-run": {
                                "command": {
                                    "Fn::Join": [
                                        " ",
                                        [
                                            "docker run -d",
                                            "docker-apps-dev.artifactory.tsp.cld.touchtunes.com/redis-shake-dev"
                                        ]
                                    ]
                                }
                            }
                        }
                    },
                    "Install": {
                        "packages": {
                            "apt": {
                                "docker.io": []
                            }
                        }
                    },
                    "Update": {
                        "commands": {
                            "update_package_manager": {
                                "command": "sudo apt-get update -y"
                            }
                        }
                    },
                    "configSets": {
                        "Install": [
                            "Update",
                            "Install",
                            "Deploy"
                        ]
                    }
                }
            },
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSRegionArch2AMI",
                        {
                            "Ref": "AWS::Region"
                        },
                        {
                            "Fn::FindInMap": [
                                "AWSInstanceType2Arch",
                                {
                                    "Ref": "InstanceType"
                                },
                                "Arch"
                            ]
                        }
                    ]
                },
                "InstanceType": {
                    "Ref": "InstanceType"
                },
                "KeyName": "devel",
                "SecurityGroupIds": [
                    "sg-cec9d8ab",
                    "sg-cec9d8ab"
                ],
                "SubnetId": "subnet-a5086e8e",
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "redis-shake-test"
                    },
                    {
                        "Key": "environment",
                        "Value": {
                            "Ref": "Env"
                        }
                    },
                    {
                        "Key": "octave:ca:servicename",
                        "Value": "redis-shake"
                    },
                    {
                        "Key": "ocatave:ca:servicegroup",
                        "Value": "replication"
                    }
                ],
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#!/bin/bash -xe\n",
                                "apt-get update -y\n",
                                "apt-get install -y python-setuptools\n",
                                "mkdir -p /opt/aws/bin\n",
                                "wget https://s3.amazonaws.com/cloudformation-examples/aws-cfn-bootstrap-latest.tar.gz\n",
                                "python -m easy_install --script-dir /opt/aws/bin aws-cfn-bootstrap-latest.tar.gz\n",
                                "/opt/aws/bin/cfn-init -v ",
                                "         --stack ",
                                {
                                    "Ref": "AWS::StackName"
                                },
                                "         --resource ShakeServer ",
                                "         --configsets Install ",
                                "         --region ",
                                {
                                    "Ref": "AWS::Region"
                                },
                                "\n",
                                "/opt/aws/bin/cfn-signal -e $? ",
                                "         --stack ",
                                {
                                    "Ref": "AWS::StackName"
                                },
                                "         --resource ShakeServer ",
                                "         --region ",
                                {
                                    "Ref": "AWS::Region"
                                },
                                "\n"
                            ]
                        ]
                    }
                }
            }
        }
    }
}
